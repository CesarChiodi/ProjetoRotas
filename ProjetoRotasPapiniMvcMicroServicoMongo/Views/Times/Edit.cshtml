@model ProjetoRotasPapiniMvcMicroServicoMongo.Models.Time

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Time</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="NomeTime" class="control-label"></label>
                <input asp-for="NomeTime" class="form-control" />
                <span asp-validation-for="NomeTime" class="text-danger"></span>
            </div>
            <div class="form-group">
				<label asp-for="PessoaTime" class="control-label"></label><br />
				@{

					foreach (var pessoa in ViewBag.Pessoa)
					{
						<input type="checkbox" id="Pessoa" name="Pessoa" value=@pessoa.Id>

						<label for="@pessoa.NomePessoa"> @pessoa.NomePessoa</label>

						<br />
					}

					<p> Pessoas Time</p>
					foreach (var pessoa in ViewBag.PessoaTime)
					{
						<input type="checkbox" id="PessoaTime" name="PessoaTime" value=@pessoa.Id>

						<label for="@pessoa.NomePessoa"> @pessoa.NomePessoa</label>

						<br />
					}
				}
			</div>
			<div class="form-group">
				</><label asp-for="Cidade" class="control-label"></label><br />
				<select asp-for="Cidade" id="Cidade">
					@{
						foreach (var cidade in ViewBag.Cidade)
						{
							<option value="@cidade.Id"> @cidade.NomeCidade - @cidade.Estado </option>  //
						}
					}
				</select>
				<span asp-validation-for="Cidade" class="text-danger"></span>
			</div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
